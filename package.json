{
  "name": "vue3-outside-events",
  "version": "2.0.5",
  "description": "Vue 3.x directive to help a specified element listen for specific events occurring outside of itself.",
  "main": "dist/vue-outside-events.min.js",
  "scripts": {
    "test": "jest --coverage",
    "cover": "opn coverage/lcov-report/index.html",
    "build": "rollup -c",
    "lint": "standard \"src/*.js\"",
    "lint:fix": "standard \"src/*.js\" --fix",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/upstars-global/vue3-outside-events"
  },
  "author": "Nicholas Hutchind <nicholas@hutchind.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/upstars-global/vue3-outside-events/pulls"
  },
  "homepage": "https://github.com/upstars-global/vue3-outside-events#readme",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vue/runtime-core": "^3.4.5",
    "@vue/tsconfig": "^0.5.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^29.7.0",
    "np": "^9.2.0",
    "opn-cli": "^5.0.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-license": "^3.2.0",
    "typescript": "^5.3.3",
    "vue": "^3.3.13"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "roots": [
      "test/"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "src",
    "index.d.ts",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ]
}
